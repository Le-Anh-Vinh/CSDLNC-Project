    <title>Document</title>
</head>
<body>
    <% function formatDate(dateString) { 
        const date = new Date(dateString);
        const day = String(date.getDate()).padStart(2, '0');
        const month = String(date.getMonth() + 1).padStart(2, '0'); // Months are zero-based
        const year = date.getFullYear();
        return `${day}/${month}/${year}`;
    } %>
    <div class="container">
        <div class="main-body">
            <!-- Title -->
            <div class="title">
                Online Check Out
            </div>
            <div class="second-card">
                <div class="row">
                    <div class="label">
                        <h4>Payment ID</h4>
                    </div>
                    <div class="display">
                        <%= HoaDonGiaoTanNha.MaHDGTN %>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="label">
                        <h4>Order ID</h4>
                    </div>
                    <div class="display">
                        <%= HoaDonGiaoTanNha.MaPTNThanhToan %>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="label">
                        <h4>Date create</h4>
                    </div>
                    <div class="display">
                        <%=formatDate(HoaDonGiaoTanNha.NgayThanhToan)%>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="label">
                        <h4>User ID</h4>
                    </div>
                    <div class="display">
                        <%=HoaDonGiaoTanNha.MaTVTichLuy%>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="label">
                        <h4>Sub Total</h4>
                    </div>
                    <div class="display">
                        <%=HoaDonGiaoTanNha.TienMonAn%> VNĐ
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="label">
                        <h4>Shipping Fee</h4>
                    </div>
                    <div class="display">
                        <%=HoaDonGiaoTanNha.PhiVanChuyen%> VNĐ
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="label">
                        <h4>Discount</h4>
                    </div>
                    <div class="display">
                        <%=HoaDonGiaoTanNha.TienGiamGia%> VNĐ
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="label">
                        <h4>Total</h4>
                    </div>
                    <div class="display">
                        <%=HoaDonGiaoTanNha.TienThanhToan%> VNĐ
                    </div>
                </div>
                <hr>
                <div>
                    <div class="confirm-btn-container">
                        <button class="confirm">Confirm Payment</button>
                    </div>
                </div>
                </div>
                    
                    
        </div>
    </div>
            
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelector('.confirm').addEventListener('click', function () {
                // Lấy Payment ID từ giao diện
                const paymentId = document.querySelector('.second-card .row:nth-child(1) .display').textContent.trim();
    
                // Gửi dữ liệu lên server
                fetch(`/invoice/spot/<%= HoaDonGiaoTanNha.MaHDGTN %>`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ paymentId }),
                })
                    .then(response => {
                        if (response.ok) {
                            alert('Payment confirmed successfully!');
                        } else {
                            alert('Failed to confirm payment. Please try again.');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('An error occurred while confirming payment.');
                    });
            });
        });
    </script>
    

